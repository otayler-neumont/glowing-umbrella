							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test Campaign\",\n  \"description\": \"A test campaign for development\"\n}"
						},
						"url": {
							"raw": "{{API_BASE}}/v1/campaigns",
